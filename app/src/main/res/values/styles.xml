<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/lightGrey</item>
        <item name="android:statusBarColor">@color/lightGrey</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/text_size_title_smartphones</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/colorSmallText</item>
        <item name="android:textSize">@dimen/text_size_minimum_smartphones</item>
    </style>

    <style name="MinimumTextStyle">
        <item name="android:textColor">#B31E1E1E</item>
        <item name="android:textSize">@dimen/text_size_minimum_smartphones</item>
    </style>

    <style name="DrawerTextStyle">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/text_size_normal_smartphones</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputStyle">
        <item name="android:textColorHint">@color/colorTitle</item>
        <item name="android:textSize">@dimen/text_size_big_smartphones</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:backgroundTint">@color/colorTitle</item>
        <item name="android:textSize">@dimen/text_size_normal_smartphones</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:drawablePadding">@dimen/padding_icon_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/btn_text</item>
        <item name="android:paddingTop">@dimen/padding_button_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_button_horizontal</item>
        <item name="android:paddingRight">@dimen/padding_button_vertical</item>
        <item name="android:paddingLeft">@dimen/padding_button_vertical</item>
    </style>

    <style name="ContainerStyle">
        <item name="android:background">@color/darkGrey</item>
    </style>

    <style name="CardStyle" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/lightGrey</item>
        <item name="cardElevation">15dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

</resources>
